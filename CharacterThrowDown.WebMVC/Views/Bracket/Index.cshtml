@model IEnumerable<CharacterThrowdown.Models.BracketListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Malice in the Palace</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BracketId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TournamentName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BracketId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TournamentName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BracketId }) |
                @Html.ActionLink("Details", "Details", new { id = item.BracketId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BracketId })
            </td>
        </tr>
    }

</table>
